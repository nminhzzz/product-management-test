extends ../../layouts/default.pug
include ../../mixins/select-tree.pug

block main
  h1(class="mb-4") Sửa danh mục sản phẩm

  form(
    action=`${prefixAdmin}/products-category/edit/${productCategory.id}?_method=PATCH`
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
        value=productCategory.title
      )
    div(class="form-group") 
      label(for="parent_id") Danh mục cha
      //- input(
      //-   type="text"
      //-   class="form-control"
      //-   id="parent_id"
      //-   name="parent_id"
      //- )
      select(
        name="parent_id"
        id="parent_id"
        class="form-control"
        
      )
        option(value="") ---chọn danh mục cha---
        if(records)
            +select-tree(records,1,productCategory.parent_id)

    div(class="form-group")
      label(for="desc") Mô tả
      textarea(
        type="text"
        class="form-control"
        id="desc"
        name="description"
        rows="5"
        textarea-mce
        
      ) #{productCategory.description}
    div(
      class="form-group"
      upload-image
    )
      label(for="thumbnail") Ảnh
      input(
        type="file"
        class="form-control-file"
        id="thumbnail"
        name="thumbnail"
        accept="image/*"
        upload-image-input
      )
      img(
        src=productCategory.thumbnail
        class="image-preview"
        upload-image-preview
      )
    div(class="form-group")
      label(for="position") Vị trí
      input(
        type="number"
        class="form-control"
        id="position"
        name="position"
        placeholder="Tự động tăng"
        min="1"
        value=productCategory.position
      )
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked=(productCategory.status == "active" ? true : false)

      )
      label(for="statusActive" class="form-check-label") Hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInActive"
        name="status"
        value="inactive"
        checked=(productCategory.status == "inactive" ? true : false)
      )
      label(for="statusInActive" class="form-check-label") Dừng hoạt động
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật