extends ../../layouts/default

block main
  h1 #{pageTitle || 'Quản lý sản phẩm'}
  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      each item in filterStatus
        button(
          class=`btn btn-sm ml-1 btn-outline-success ${item.class}`
          button-status=item.status
        ) #{item.name}
  .card.mb-3
    .card-header danh sach san pham
    .card-body

      table.table.table-hover.table-sm
        thead
          tr
            th STT
            th Hình ảnh
            th Tiêu đề
            th Giá
            th Trạng thái
            th Hành động

        tbody
          each item in products
            tr
              td 1
              td
                img(
                  src=item.thumbnail
                  alt=item.title
                  width="80"
                )
              td Sản phẩm 1
              td 100$
              td
                if (item.status == "active")
                  a(href="#" class="badge badge-success") Hoạt động
                else
                  a(href="#" class="badge badge-danger") Dừng hoạt động
              td
                button(class="btn btn-warning btn-sm") Sửa
                button(class="btn btn-danger btn-sm ml-1") Xóa