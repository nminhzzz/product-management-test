extends ../../layouts/default.pug
include ../../mixins/alert
block main
  if role.permissions.includes("roles_permission")
    h1(class="mb-4") Phân quyền
        +alert-success(5000)


    if(records)
      div(class="text-right")
        button(
          type="submit"
          class="btn btn-primary mb-3"
          button-submit=`/${prefixAdmin}/roles/permissions`
        ) Cập nhật

      table(
        class="table table-hover table-sm"
        table-permissions
      )
        thead
          tr
            th Tính năng
            each item in records
              th(
                class="text-center"
                role-id=item.id
              ) #{item.title}
        tbody
          tr(data-name="id")
              td
                  each item in records
                      td(class="text-center")
                          input.d-none(type="text" value=item.id)

          tr
            td(colspan="4")
              b Danh mục sản phẩm
          tr(data-name="products-category_view")
            td Xem
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id 
                  
                  checked=(item.permissions.includes("products-category_view") ? true : false)
                )
          tr(data-name="products-category_create")
            td Thêm mới
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id
                  
                  checked=(item.permissions.includes("products-category_create") ? true : false)
                )
          tr(data-name="products-category_edit")
            td Chỉnh sửa
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id
                  
                  checked=(item.permissions.includes("products-category_edit") ? true : false)
                )
          tr(data-name="products-category_delete")
            td Xóa
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id
                  
                  checked=(item.permissions.includes("products-category_delete") ? true : false)
                )
          tr
            td(colspan="4")
              b Sản phẩm 
          tr(data-name="products_view")
            td Xem
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id 
                  
                  checked=(item.permissions.includes("products_view") ? true : false)
                )
          tr(data-name="products_create")
            td Thêm mới
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id
                  
                  checked=(item.permissions.includes("products_create") ? true : false)
                )
          tr(data-name="products_edit")
            td Chỉnh sửa
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id
                  
                  checked=(item.permissions.includes("products_edit") ? true : false)
                )
          tr(data-name="products_delete")
            td Xóa
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id
                  
                  checked=(item.permissions.includes("products_delete") ? true : false)
                )
          tr
            td(colspan="4")
              b Nhóm quyền
          tr(data-name="roles_view")
            td Xem
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id 
                  
                  checked=(item.permissions.includes("roles_view") ? true : false)
                )
          tr(data-name="roles_create")
            td Thêm mới
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id
                  
                  checked=(item.permissions.includes("roles_create") ? true : false)
                )
          tr(data-name="roles_edit")
            td Chỉnh sửa
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id
                  
                  checked=(item.permissions.includes("roles_edit") ? true : false)
                )
          tr(data-name="roles_delete")
            td Xóa
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id
                  
                  checked=(item.permissions.includes("roles_delete") ? true : false)
                )
          tr(data-name="roles_permission")
            td Phân quyền
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id
                  
                  checked=(item.permissions.includes("roles_permission") ? true : false)
                )
          tr
            td(colspan="4")
              b tài khoản
          tr(data-name="accounts_view")
            td Xem
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id 
                  
                  checked=(item.permissions.includes("accounts_view") ? true : false)
                )
          tr(data-name="accounts_create")
            td Thêm mới
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id
                  
                  checked=(item.permissions.includes("accounts_create") ? true : false)
                )
          tr(data-name="accounts_edit")
            td Chỉnh sửa
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id
                  
                  checked=(item.permissions.includes("accounts_edit") ? true : false)
                )
          tr(data-name="accounts_delete")
            td Xóa
            each item in records
              td(class="text-center")
                input(
                  type="checkbox" 
                  data-id=item.id
                  
                  checked=(item.permissions.includes("accounts_delete") ? true : false)
                )
    form.d-none(
      id="form-change-permissions"
      method="POST"
      action=`${prefixAdmin}/roles/permission?_method=PATCH`
    )
      div(class="form-group")
        input(
          type="text"
          class="form-control"
          name="permissions"
        )

    script(src="/admin/js/role.js") 